rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    function getRole() {
       return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isMaster() {
      return getRole() == 'master';
    }

    // --- Users Collection ---
    match /users/{userId} {
      allow read: if isAuthenticated(); 
      allow update, write: if isOwner(userId);
      allow create: if isAuthenticated(); 
    }

    // --- Service Cards Collection ---
    match /service_cards/{cardId} {
      allow read: if true; // Publicly visible
      
      // Only Masters can create/update/delete their own cards
      allow create: if isMaster() && request.resource.data.masterId == request.auth.uid;
      allow update, delete: if isMaster() && resource.data.masterId == request.auth.uid;
    }

    // --- Deals Collection ---
    match /deals/{dealId} {
      // Participants can read the deal
      allow read: if isAuthenticated() && 
                  (resource.data.clientId == request.auth.uid || resource.data.masterId == request.auth.uid);
      
      // Only Masters can create a deal
      // Backend (Functions) will validate balance and perform deduction
      allow create: if isMaster() && request.resource.data.masterId == request.auth.uid;
    }
    // --- Transactions Collection ---
    match /transactions/{txId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated(); 
    }
  }
}
