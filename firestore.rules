rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    function getRole() {
       return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isMaster() {
      return getRole() == 'master';
    }

    // --- Users Collection ---
    match /users/{userId} {
      // Users can read their own profile or if they are authenticated (for sync logic)
      // Public can read master profiles if they are visible
      allow read: if isAuthenticated(); 
      
      // ALLOW update for MVP (Relaxed Rule)
      // CAUTION: This allows Masters to update ANYONE'S balance.
      // In production, move this logic to Cloud Functions.
      allow update, write: if isAuthenticated();

      // RELAXED FOR DEMO: Allow any authenticated user (e.g. anonymous) to create a user doc
      allow create: if isAuthenticated(); 
    }

    // --- Service Cards Collection ---
    match /service_cards/{cardId} {
      allow read: if true; // Publicly visible
      
      // Only Masters can create/update/delete their own cards
      allow create: if isMaster() && request.resource.data.master_id == request.auth.uid;
      allow update, delete: if isMaster() && resource.data.master_id == request.auth.uid;
    }

    // --- Deals Collection ---
    match /deals/{dealId} {
      // Participants can read the deal
      allow read: if isAuthenticated() && 
                  (resource.data.client_id == request.auth.uid || resource.data.master_id == request.auth.uid);
      
      // Only Masters can create a deal
      // Backend (Functions) will validate balance and perform deduction
      allow create: if isMaster() && request.resource.data.master_id == request.auth.uid;
    }
    // --- Transactions Collection ---
    match /transactions/{txId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Creation is usually handled via server-side Batch in processDealTransaction,
      // which currently runs client-side but uses Batch (which needs create permission if run from client).
      allow create: if isAuthenticated(); 
    }
  }
}
